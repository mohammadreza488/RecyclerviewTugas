<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#f7f8fa">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layoutConstraint"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="135dp"
            android:text="A City Living Under the Shadow"
            android:textColor="#000000"
            android:textSize="25sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </TextView>

        <ImageView
            android:id="@+id/news_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/news_title"
            app:layout_constraintBottom_toBottomOf="parent">
        </ImageView>

        <TextView
            android:id="@+id/news_source"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RBC News"
            android:layout_marginStart="10dp"
            android:textColor="#3498db"
            android:textSize="14sp"
            app:layout_constraintStart_toEndOf="@id/news_logo"
            app:layout_constraintTop_toTopOf="@id/news_logo"
            app:layout_constraintBottom_toBottomOf="@id/news_logo">
        </TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
